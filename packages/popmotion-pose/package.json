{
  "name": "popmotion-pose",
  "version": "1.0.3",
  "description": "A declarative animation library for HTML and SVG",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "bundle": "NODE_ENV=production webpack",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "measure": "gzip -c dist/popmotion-pose.js | wc -c",
    "prettier": "prettier ./src/*",
    "prepublishOnly": "npm run prettier && npm run build && npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/popmotion"
  },
  "keywords": [
    "animation",
    "dom",
    "declarative",
    "popmotion"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "presets": [
    "env"
  ],
  "devDependencies": {
    "typescript": "^2.7.2",
    "prettier": "1.11.1",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "popmotion": "^8.1.21"
  },
  "unpkg": "./dist/popmotion-pose.js",
  "prettier": {
    "parser": "typescript",
    "singleQuote": true
  }
}
